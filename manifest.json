{
  "manifest_version": 3,
  "name": "Timer Tool",
  "version": "1.0.0",
  "description": "A tool to help you keep track of time",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Timer Tool",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  }
}
